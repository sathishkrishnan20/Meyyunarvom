<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_poem_update_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.avs.meyyunarvom.PoemUpdatePopup">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_doubt"
                android:layout_margin="10dp"
                android:background="@color/doubt_tab">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_doubt"
                    android:layout_margin="5dp"
                    android:orientation="vertical">


                    <TextView
                        android:text="Poems"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:background="@color/answer_tab"
                        android:gravity="center"
                        android:id="@+id/textView7"
                        android:textSize="@dimen/title"
                        android:textColor="@color/DarkBlack" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:id="@+id/materialforqustiondoubt">


                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Add Title"
                            android:layout_marginTop="40dp"
                            android:gravity="center"
                            android:id="@+id/title_update_poem" />
                    </android.support.design.widget.TextInputLayout>


                    <MultiAutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="5dp"
                        android:padding="4dp"
                        android:id="@+id/content_update_poem"
                        android:hint="Add Your Poem"
                        android:ellipsize="start"
                        android:gravity="top"
                        android:scrollbars="vertical"
                        android:background="@drawable/edittext_style"/>



                    <Button
                        android:layout_width ="match_parent"
                        android:layout_height ="wrap_content"
                        android:layout_marginTop ="10dp"
                        android:id="@+id/buttonUpdateSendpoem"
                        android:text="Change"
                        style="?android:textAppearanceSmall"
                        android:background = "#ec45a1"
                        android:textAllCaps ="false"
                        android:textColor = "#fff"
                        android:textStyle = "bold"
                        android:textSize = "18sp" />



                </LinearLayout>
                </ScrollView>
            </RelativeLayout>


        </RelativeLayout>




</RelativeLayout>
