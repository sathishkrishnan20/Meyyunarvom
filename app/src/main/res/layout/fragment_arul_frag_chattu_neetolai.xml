<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.avs.meyyunarvom.ArulFragChattuNeetolai">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relsudalai_his_id">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="1dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="1dp"
                    android:gravity="center"
                    android:background="@color/colordoubt"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:id="@+id/chatu_titleid1" />




                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="45dp"
                    android:textIsSelectable="true"
                    style="@style/AlertDialog.AppCompat.Light"
                    android:textSize="@dimen/fragcontent"
                    android:id="@+id/chatu_contentid1" />

            </RelativeLayout>
        </ScrollView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TableRow>

                    <Button
                        android:text="Previous"
                        android:layout_weight="1"
                        style="?buttonBarButtonStyle"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_marginEnd="1dp"
                        android:id="@+id/chatupreviousbtn"
                        android:background="@color/colorAccent"
                        android:textColor="@color/white" />

                    <Button
                        android:text="Next"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        style="?buttonBarButtonStyle"

                        android:background="@color/colorAccent"
                        android:textColor="@color/white"
                        android:id="@+id/chatunextbtn"/>

                </TableRow>

            </TableLayout>
        </RelativeLayout>
    </RelativeLayout>





</FrameLayout>
