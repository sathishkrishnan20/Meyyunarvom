<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.avs.meyyunarvom.MainActivity"
    tools:showIn="@layout/app_bar_main">



            <ViewFlipper
                android:id="@+id/view_flipper"
                android:layout_width="fill_parent"
                android:layout_height="180dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:id="@+id/img"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ban1" />

            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ban2" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ban3" />
                </RelativeLayout>

            </ViewFlipper>


    <include layout="@layout/flipper_text" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_flipper">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TableRow android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/ayyavazhiid"
                    android:background="@mipmap/ayyavazhi"
                    android:layout_gravity="center"/>

                <ImageButton
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/akilathirattuid"
                    android:background="@mipmap/akilathirattu"
                    android:layout_gravity="center"/>






            </TableRow>

            <TableRow android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">


                <ImageButton
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/vazhipattuid"
                    android:background="@mipmap/vazhipattu"
                    android:layout_gravity="center"/>


                <ImageButton
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/doubtid"
                    android:background="@mipmap/doubt"
                    android:layout_gravity="center"/>

            </TableRow>


            <TableRow android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:padding="0dp">


                <ImageButton
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/templeid"
                    android:background="@mipmap/temples"
                    android:layout_gravity="center"/>


                <ImageButton
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/historyid"
                    android:background="@mipmap/history"
                    android:layout_gravity="center"/>
            </TableRow>





            <TableRow android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">

            <ImageButton
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/addtempleid"
                    android:src="@mipmap/poem"
                    android:background="@mipmap/poembg"
                    android:layout_gravity="center"/>

            </TableRow>




        </LinearLayout>
    </ScrollView>



</RelativeLayout>
